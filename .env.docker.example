# Docker Compose Environment Variables
# Copy to .env and fill in your values before running docker compose up

# PostgreSQL Configuration
POSTGRES_DB=livx
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Payload CMS
# Generate with: openssl rand -hex 32
PAYLOAD_SECRET=your-32-character-secret-key-here

# Database URL used by Payload
# This is constructed automatically in docker-compose.yml, but kept here for clarity.
DATABASE_URL=

# Server URLs
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Node Environment (production or development)
NODE_ENV=production

# Optional: PostgreSQL additional initialization arguments
POSTGRES_INITDB_ARGS=
